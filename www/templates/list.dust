<table>
	<thead>
		<tr>
			<th>#</th>
			<th>Title</th>
{! 			<th>Category</th>
			<th>Author</th> !}
			<th>ISBN</th>
			<th>File</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		{#.}
		<tr idx="{$idx}">
			<td>{$idx}</td>
			<td>{title}</td>
{! 			<td>{category}</td>
			<td>{author}</td> !}
			<td>{isbn}</td>
			<td>
				{?link}
					<button class="preview" name="{isbn}" link="{link}">Preview</button>
				{:else}
					None.
				{/link}
			</td>
			<td>
				<button class="edit" name="{isbn}">Edit</button>
				<button class="delete" name="{isbn}">Delete</button>
			</td>
		</tr>
		{/.}
	</tbody>
</table>